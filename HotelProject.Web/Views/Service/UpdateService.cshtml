@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div>
    <form method="post">
        <input type="hidden" asp-for="ServiceID" />
        <label>Hizmet İkonu</label>
        <input type="text" class="form-control" asp-for="ServiceIcon" />
        <span asp-validation-for="ServiceIcon" class="text-danger"></span>
        <br />
        <label>Hizmet Başlığı</label>
        <input type="text" class="form-control" asp-for="ServiceTitle" />
        <span asp-validation-for="ServiceTitle" class="text-danger"></span>
        <br />
        <label>Açıklama</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />
        <button class="btn mb-1 btn-rounded btn-outline-primary">Güncelle</button>
    </form>
</div>

