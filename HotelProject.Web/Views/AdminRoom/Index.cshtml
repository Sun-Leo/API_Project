@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Fiyat</th>
        <th>Yatak Sayısı</th>
        <th>Banyo Sayısı</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.RoomID</th>
            <td><img src="@item.RoomCoverImage" style="height:90px; width:90px" /></td>
            <td>@item.RoomNumber</td>
            <td>@item.RoomTitle</td>
            <td>@item.RoomPrice</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td>@item.Description</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-dark">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-outline-dark">Oda Ekle</a>

