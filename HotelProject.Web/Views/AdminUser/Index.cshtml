@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Ad Soyad</th>
                                    <th>Şehir</th>
                                    <th>Lokasyon</th>
                                    <th>Durum</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                                        <td>@item.Name @item.Surname</td>
                                        <td>@item.City</td>
                                        <td>@item.WorkLocationName</td>
                                        <td> 
                                            @if (item.Status == "Aktif")
                                            {
                                                <i class="fa fa-circle-o text-success  mr-2"></i>

                                                @item.Status
                                            }
                                            else
                                            {
                                                <i class="fa fa-circle-o text-danger  mr-2"></i> 
                                                @item.Status

                                            }
                                        </td>
                                      
                                    </tr>
                                }
                              
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

