@model CreateContactDto
<div class="col-md-6">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
        <form method="post" asp-action="SendMessage" asp-controller="Contact">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="name" name="Name" placeholder="Adınız">
                        <label for="name">Adınız</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="email" name="Mail" placeholder="Mail Adresiniz">
                        <label for="email">Mail Adresiniz</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="subject" name="Subject" placeholder="Konu">
                        <label for="subject">Konu</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Mesajınız" id="message" name="Message" style="height: 150px"></textarea>
                        <label for="message">Mesaj</label>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100 py-3" type="submit">Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>