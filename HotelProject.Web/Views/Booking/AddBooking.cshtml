@model CreateBookingDto
<div class="col-lg-6">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
        <form method="post" asp-action="AddBooking" asp-controller="Booking">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
                        <label for="name">Adınız</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz">
                        <label for="email">Mail Adresiniz</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating date" id="date3" data-target-input="nearest">
                        <input type="date" class="form-control datetime-input" asp-for="Checkin" id="checkin" placeholder="Giriş Tarihi"   />
                        <label for="checkin">Giriş Tarihi</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating date" id="date4" data-target-input="nearest">
                        <input type="date" class="form-control datetime-input" asp-for="Checkout" id="checkout" placeholder="Çıkış Tarihi"  />
                        <label for="checkout">Çıkış Tarihi</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select" id="select1" asp-for="AdultCount">
                            <option value="1">1 Yetişkin</option>
                            <option value="2">2 Yetişkin</option>
                            <option value="3">3 Yetişkin</option>
                        </select>
                        <label for="select1">Yetişkin Seç</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select" id="select2" asp-for="ChildCount">
                            <option value="1">0 Çocuk</option>
                            <option value="1">1 Çocuk</option>
                            <option value="2">2 Çocuk</option>
                            <option value="3">3 Çocuk</option>
                        </select>
                        <label for="select2">Çocuk Seç</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <select class="form-select" id="select3" asp-for="SelectRoom">
                            <option value="1">Standart Oda 1</option>
                            <option value="2">Standart Oda 2</option>
                            <option value="3">Standart Oda 3</option>
                            <option value="4">Junior Suite</option>
                            <option value="4">Executive Suite</option>
                            <option value="4">Super Delux</option>
                        </select>
                        <label for="select3">Bir Oda Seç</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Özel İstekler"   asp-for="SpecialRequest"    id="message" style="height: 100px"></textarea>
                        <label for="message">Özel İstek</label>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                </div>
            </div>
        </form>
    </div>
</div>
