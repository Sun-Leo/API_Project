@model List<CurrencyList.Exchange_Rates>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
   
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Döviz Kurları</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>Döviz</th>
                                    <th>Birim Fiyat</th>

                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.currency</td>
                                    <td>@item.exchange_rate_buy</td>

                                </tr>
                            }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Döviz</th>
                                    <th>Birim Fiyat</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>


   

</div>

