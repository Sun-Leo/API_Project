@model CreateSendMessageDto
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Oluştur</a>
                        <div class="mail-list mt-4">
                            <a href="/AdminContact/Inbox/" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b> <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.contactCount</span> </a>
                            <a href="/AdminContact/SendBox/" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu <span class="badge badge-success badge-sm float-right m-t-5">@ViewBag.sendCount</span></a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemli <span class="badge badge-danger badge-sm float-right m-t-5">47</span> </a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslak</a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu</a>
                        </div>
                        <h5 class="mt-5 m-b-10">Kategoriler</h5>
                        <div class="list-group mail-list">
                            <a href="#" class="list-group-item border-0"><span class="fa fa-briefcase f-s-14 mr-2"></span>İş</a>
                            <a href="#" class="list-group-item border-0"><span class="fa fa-sellsy f-s-14 mr-2"></span>Özel</a>
                            <a href="#" class="list-group-item border-0"><span class="fa fa-ticket f-s-14 mr-2"></span>Destek</a>
                            <a href="#" class="list-group-item border-0"><span class="fa fa-tags f-s-14 mr-2"></span>Sosyal</a>
                        </div>
                    </div>
                    <div class="email-right-box">
                        <div class="toolbar" role="toolbar">
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-archive"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-exclamation-circle"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Taşı</span>
                                    <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Güncelle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Formlar</a>
                                </div>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Label as:</span>
                                    <a class="dropdown-item" href="javascript: void(0);">Güncelle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Formlar</a>
                                </div>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    Mesaj Oluştur <span class="caret m-l-5"></span>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">More Option :</span>
                                    <a class="dropdown-item" href="javascript: void(0);">Okundu Olarak İşaretle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Taslaklara Ekle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Yıldız Ekle</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Sessize Al</a>
                                </div>
                            </div>
                        </div>
                        <div class="compose-content mt-5">
                            <form method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" placeholder=" Alıcı" asp-for="ReceiverMail">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" placeholder=" Alıcı Adı" asp-for="ReceiverName">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control bg-transparent" placeholder=" Konu" asp-for="Title">
                                </div>
                                <div class="form-group">
                                    <textarea class="textarea_editor form-control bg-light" rows="15" placeholder=Mesaj... asp-for="Content"></textarea>
                                </div>
                                <div class="text-left m-t-15">
                                    <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10">Gönder</button>
                                </div>
                            </form>
                         
                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

