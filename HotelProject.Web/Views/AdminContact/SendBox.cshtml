@model List<ResultSendMessage>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Oluştur</a>
                        <div class="mail-list mt-4">
                            <a href="/AdminContact/Inbox/" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b> <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.contactCount</span> </a>
                            <a href="/AdminContact/SendBox/" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu <span class="badge badge-success badge-sm float-right m-t-5">@ViewBag.sendCount</span></a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2"></i>Önemli <span class="badge badge-danger badge-sm float-right m-t-5">47</span> </a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslak</a>
                            <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu</a>
                        </div>
                        <h5 class="mt-5 m-b-10">Kategoriler</h5>
                        <div class="list-group mail-list">
                            <a href="#" class="list-group-item border-0"><span class="fa fa-briefcase f-s-14 mr-2"></span>İş</a>
                            <a href="#" class="list-group-item border-0"><span class="fa fa-sellsy f-s-14 mr-2"></span>Özel</a>
                            <a href="#" class="list-group-item border-0"><span class="fa fa-ticket f-s-14 mr-2"></span>Destek</a>
                            <a href="#" class="list-group-item border-0"><span class="fa fa-tags f-s-14 mr-2"></span>Sosyal</a>
                        </div>
                    </div>
                    <div class="email-right-box">
                        <div role="toolbar" class="toolbar">
                            <div class="btn-group">
                                <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                                    Giden Mesajlar <span class="caret m-l-5"></span>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">More Option :</span>  <a href="javascript: void(0);" class="dropdown-item">Okunmamış Olarak İşaretle</a>
                                    <a href="javascript: void(0);" class="dropdown-item">Görevlere Ekle</a>
                                    <a href="javascript: void(0);" class="dropdown-item">Yıldız Ekle</a>
                                    <a href="javascript: void(0);" class="dropdown-item">Sessize Al</a>
                                </div>
                            </div>
                        </div>
                        <div class="email-list m-t-15">
                            @foreach (var item in Model)
                            {
                                <div class="message">
                                    <a href="/AdminContact/ReadMessageSend/@item.SendMessageID">
                                        <div class="col-mail col-mail-1">
                                            <div class="email-checkbox">
                                                <input type="checkbox" id="chk2">
                                                <label class="toggle" for="chk2"></label>
                                            </div><span class="star-toggle ti-star"></span>
                                        </div>
                                        <div class="col-mail col-mail-2">
                                            <div class="subject"><b>Konu:</b>@item.Title</div>
                                            <div class="date">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</div>
                                        </div>
                                    </a>
                                </div>
                            }


                        </div>
                        <!-- panel -->
                        <div class="row">
                            <div class="col-7">
                                <div class="text-left">1 - 20 of 568</div>
                            </div>
                            <div class="col-5">
                                <div class="btn-group float-right">
                                    <button class="btn btn-gradient" type="button">
                                        <i class="fa fa-angle-left"></i>
                                    </button>
                                    <button class="btn btn-dark" type="button">
                                        <i class="fa fa-angle-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

